{{>Header}}

   <div class="container">
       <div class="inner">

        <h1>Blog setup</h1>
        <hr class="cutter">
        <img id="imgs" src="data:image/jpeg;base64," alt="blogpost" >
       <form action="" method="post" enctype="multipart/form-data" >
            <label for="file" class="uploadfile"><i class="fas fa-upload"></i></label>
            <input type="file" name="file" id="file" class="file">
            <div class="detail-blog">
                 <input type="text" name="title" id="title" class="title form-control" placeholder="Enter Blog Title">
                 <div class="errinfo"></div>
                 <div class="info"></div>
                 <textarea name="description" id="descriptions" class="form-control" placeholder="Enter blog Discription" rows="9" ></textarea>
                 <div class="errinfo"></div>
                  <div class="info"></div>
            </div>
            <div class="user-details">
                 <input type="text" name="name" id="name" class="form-control" placeholder="Enter Your Name">
                 <div class="errinfo"></div>
                  <div class="info"></div>
                 <input type="email" name="email" id="email" class="form-control" placeholder="Enter Your Email">
                 <div class="errinfo"></div>
                  <div class="info"></div>
                 <input type="password" name="password" id="password" class="form-control" placeholder="Enter Your Password">
                 <div class="errinfo"></div>
                  <div class="info"></div>
                 <input type="submit" id="submit" value="Set Blog">
            </div>

       </form>

       </div>
       
   </div>

{{>Footer}}